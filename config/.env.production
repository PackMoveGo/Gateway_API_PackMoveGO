# Production Environment Configuration for PackMoveGO Backend
# This file is used on Render deployment

# =================================================================
# ENVIRONMENT & PORTS
# =================================================================
NODE_ENV=production
PORT=15050
GATEWAY_PORT=10000

# =================================================================
# GATEWAY CONFIGURATION
# =================================================================
# Frontend API Key - Required for gateway authentication
API_KEY_FRONTEND=pmg_frontend_live_sk_a7f8e2d9c1b4x6m9p3q8r5t2w7y1z4a6

# Admin API Key - For administrative operations
API_KEY_ADMIN=pmg_admin_live_sk_m9x2c8v5b1n7q4w8e3r6t9y2u5i8o1p4

# Enable API key validation
API_KEY_ENABLED=true

# Private API URL (for gateway to connect to private service)
# This will be set in Render dashboard to internal service URL
PRIVATE_API_URL=http://packmovego-api-private:15050

# =================================================================
# AUTHENTICATION & SECURITY
# =================================================================
# IMPORTANT: Set these in Render dashboard, not here
JWT_SECRET=SET_IN_RENDER_DASHBOARD
ADMIN_PASSWORD=SET_IN_RENDER_DASHBOARD
SESSION_SECRET=SET_IN_RENDER_DASHBOARD
HASH=SET_IN_RENDER_DASHBOARD

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# IMPORTANT: Set these in Render dashboard
MONGODB_URI=SET_IN_RENDER_DASHBOARD
DB_URI=SET_IN_RENDER_DASHBOARD
DATABASE_URL=SET_IN_RENDER_DASHBOARD

# =================================================================
# CORS CONFIGURATION
# =================================================================
CORS_ORIGIN=https://www.packmovego.com,https://packmovego.com
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS,HEAD
CORS_ALLOWED_HEADERS=Content-Type,Authorization,x-api-key,X-Requested-With,Accept,Origin

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =================================================================
# SECURITY & ACCESS CONTROL
# =================================================================
ALLOWED_DOMAINS=api.packmovego.com,www.packmovego.com,packmovego.com

# =================================================================
# SSL/TLS CONFIGURATION
# =================================================================
USE_SSL=true
SSL_KEY_PATH=./config/certs/production/key.pem
SSL_CERT_PATH=./config/certs/production/cert.pem
GATEWAY_SSL_KEY_PATH=./config/certs/production/key.pem
GATEWAY_SSL_CERT_PATH=./config/certs/production/cert.pem

# =================================================================
# ARCJET SECURITY
# =================================================================
# Set in Render dashboard
ARCJET_KEY=SET_IN_RENDER_DASHBOARD
ARCJET_ENV=production

# =================================================================
# PAYMENT INTEGRATION
# =================================================================
# Set in Render dashboard
STRIPE_SECRET_KEY=SET_IN_RENDER_DASHBOARD
STRIPE_PUBLISHABLE_KEY=SET_IN_RENDER_DASHBOARD

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
# Set in Render dashboard
EMAIL_USER=SET_IN_RENDER_DASHBOARD
EMAIL_PASSWORD=SET_IN_RENDER_DASHBOARD
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true

# =================================================================
# MONITORING & LOGGING
# =================================================================
DEBUG=false
LOG_LEVEL=info

# =================================================================
# PRODUCTION SETTINGS
# =================================================================
PRODUCTION_DOMAIN=https://www.packmovego.com
API_URL=https://api.packmovego.com

# =================================================================
# MAINTENANCE
# =================================================================
MAINTENANCE_MODE=false

# =================================================================
# SERVICE TYPE
# =================================================================
SERVICE_TYPE=private
