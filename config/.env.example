# ========================================
# PACKMOVEGO ENVIRONMENT CONFIGURATION
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Connection String
MONGODB_URI=mongodb+srv://rhamseyswork:your_password_here@cluster0.mongodb.net/packgomove?retryWrites=true&w=majority

# Prisma Database URL (if using Prisma)
DATABASE_URL=postgresql://username:password@localhost:5432/packgomove

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:5000,http://localhost:5001,https://www.packmovego.com,https://packmovego.com

# Allowed HTTP methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ========================================
# PAYMENT CONFIGURATION (STRIPE)
# ========================================
# Stripe Secret Key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Email service credentials
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password_here

# Email service configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false

# ========================================
# EXTERNAL SERVICES
# ========================================
# Google Maps API Key (if using location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ========================================
# DEVELOPMENT SPECIFIC
# ========================================
# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=debug

# ========================================
# PRODUCTION SPECIFIC
# ========================================
# Production domain
PRODUCTION_DOMAIN=https://www.packmovego.com

# SSL configuration
SSL_KEY_PATH=/path/to/ssl/key.pem
SSL_CERT_PATH=/path/to/ssl/cert.pem

# ========================================
# MONITORING & ANALYTICS
# ========================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id_here

# ========================================
# CACHE & SESSION
# ========================================
# Redis URL (if using Redis for caching)
REDIS_URL=redis://localhost:6379

# Session secret
SESSION_SECRET=your_session_secret_here

# ========================================
# FILE UPLOAD
# ========================================
# AWS S3 Configuration (if using S3 for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=packmovego-uploads

# ========================================
# NOTIFICATIONS
# ========================================
# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# WEBHOOKS
# ========================================
# Webhook secret for external integrations
WEBHOOK_SECRET=your_webhook_secret_here

# ========================================
# RATE LIMITING
# ========================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# BACKUP & MAINTENANCE
# ========================================
# Backup configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back soon.
