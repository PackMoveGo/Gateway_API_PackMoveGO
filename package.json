{
  "name": "pack-go-movers-backend",
  "version": "1.0.0",
  "description": "Backend for Pack Go Movers",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && tsc",
    "build:server": "tsc --project config/tsconfig.server.json",
    "build:gateway": "tsc --project config/tsconfig.gateway.json",
    "postinstall": "npm run build",
    "dev:server": "NODE_ENV=development nodemon --watch src --watch config --ext ts,js,json --exec ts-node src/server.ts",
    "dev:gateway": "NODE_ENV=development nodemon --watch src/gateway --watch config --ext ts,js,json --exec ts-node src/gateway/gateway.ts",
    "dev": "bash script/turnOFFPort.sh 3000 3001 && NODE_ENV=development concurrently -n server,gateway -c cyan,magenta \"npm:dev:server\" \"npm:dev:gateway\"",
    "start:server": "NODE_ENV=production node dist/src/server.js",
    "start:gateway": "NODE_ENV=production node dist/src/gateway/gateway.js",
    "start": "NODE_ENV=production concurrently -n api,gateway -c green,blue \"npm:start:server\" \"npm:start:gateway\"",
    "prod": "npm run build && npm start",
    "start:render:server": "NODE_ENV=production node dist/src/server-entry.js",
    "start:render:gateway": "NODE_ENV=production node dist/src/gateway/gateway-entry.js",
    "deploy": "bash script/deploy-to-render.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:gateway": "bash script/test-gateway.sh",
    "test:prod": "node test-production.js",
    "test:security": "node test/test-security.js",
    "test:security:prod": "TEST_URL=https://api.packmovego.com node test/test-security.js",
    "security:check": "npm run test:security",
    "generate:secrets": "node script/generate-secrets.js",
    "security:setup": "npm run generate:secrets && npm run security:check",
    "clean:ports": "bash script/turnOFFPort.sh 3000 3001"
  },
  "dependencies": {
    "@arcjet/node": "^1.0.0-beta.11",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.4.1",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.5",
    "morgan": "^1.10.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ssh2": "^1.16.0",
    "stripe": "^14.14.0",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0",
    "typescript": "^5.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.14",
    "@types/socket.io": "^3.0.1",
    "@types/ssh2": "^1.15.5",
    "@types/winston": "^2.4.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  }
}
